@model User
<form asp-action="registration" asp-controller="User" method="post">
    <div class="form-group">
        <span asp-validation-for="FirstName" class="errorMessage"></span>
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="LastName" class="errorMessage"></span>
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Email" class="errorMessage"></span>
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Password" class="errorMessage"></span>
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Confirm" class="errorMessage"></span>
        <label asp-for="Confirm"></label>
        <input asp-for="Confirm" class="form-control">
    </div>
    <button class="btn btn-success"> Register </button>
</form>